<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.scoresheet.app">

    <!-- Permissions required by the sync adapter Lesson 6.03 -->
    <uses-permission
        android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission
        android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission
        android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EventsActivity"
            android:label="@string/title_activity_events"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.scoresheet.app.MainActivity" />
        </activity>
        <activity
            android:name=".EntrantsActivity"
            android:label="@string/title_activity_entrants"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.scoresheet.app.MainActivity" />
        </activity>
        <activity
            android:name=".UsersActivity"
            android:label="@string/title_activity_users"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.scoresheet.app.MainActivity" />
        </activity>
        <activity
            android:name=".EventEntrantDetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/AppTheme"
            android:parentActivityName=".EventsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.scoresheet.app.EventsActivity" />
        </activity>
        <activity
            android:name=".EventViewDetailActivity"
            android:label="@string/title_activity_detail"
            android:theme="@style/AppTheme"
            android:parentActivityName=".EventEntrantDetailActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.scoresheet.app.EventEntrantDetailActivity" />
        </activity>
        <activity
            android:name=".EventNewActivity"
            android:label="@string/title_new_detail"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.scoresheet.app.MainActivity" />
        </activity>
        <activity
            android:name=".EventEditActivity"
            android:label="@string/title_edit_detail"
            android:theme="@style/AppTheme"
            android:parentActivityName=".EventsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.scoresheet.app.EventsActivity" />
        </activity>
        <activity
            android:name=".OptionsActivity"
            android:label="@string/title_action_settings"
            android:theme="@style/SettingsTheme"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.scoresheet.app.MainActivity" />
        </activity>

        <provider
            android:authorities="@string/content_authority"
            android:name=".data.ScoreSheetProvider"
            android:exported="false"
            android:syncable="true" />

        <service android:name=".sync.ScoreSheetAuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <!-- The SyncAdapter service -->
        <service
            android:name=".sync.ScoreSheetSyncAdapterService"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>

    </application>

</manifest>