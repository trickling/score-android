<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/fragment_edit_entrant">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/entrantFirstNameHeader"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:text="@string/entrantFirstNameLabel" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/entrant_first_name_text_edit"
                android:layout_gravity="center_horizontal"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/entrantLastNameHeader"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:text="@string/entrantLastNameLabel" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/entrant_last_name_text_edit"
                android:layout_gravity="center_horizontal"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/entrantIdHeader"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:text="@string/entrantIdLabel" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/entrant_id_text_edit"
                android:layout_gravity="center_horizontal"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/entrantDogNameHeader"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:text="@string/entrantDogNameLabel" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/entrant_dog_name_text_edit"
                android:layout_gravity="center_horizontal"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/entrantDogIdHeader"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:text="@string/entrantDogIdLabel" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/entrant_dog_id_text_edit"
                android:layout_gravity="center_horizontal"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/entrantBreedHeader"
                android:gravity="center_vertical"
                android:layout_gravity="center_horizontal"
                android:text="@string/entrantBreedLabel" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/entrant_breed_text_edit"
                android:layout_gravity="center_horizontal"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:id="@+id/entrantEditSave"
            android:text="Save" />

    </LinearLayout>

</ScrollView>