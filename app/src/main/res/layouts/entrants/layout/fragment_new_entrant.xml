<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:id="@+id/fragment_new_entrant">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/entrantFirstNameHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/entrantFirstNameLabel"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/entrant_first_name_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/entrantLastNameHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/entrantLastNameLabel"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/entrant_last_name_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/entrantIdHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/entrantIdLabel"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/entrant_id_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/entrantDogNameHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/entrantDogNameLabel"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/entrant_dog_name_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/entrantDogIdHeader"
                android:gravity="center_vertical"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:text="@string/entrantDogIdLabel"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/entrant_dog_id_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/entrantBreedHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/entrantBreedLabel"
                android:layout_weight="1"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/entrant_breed_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:id="@+id/entrantNewSave"
            android:text="Save" />

    </LinearLayout>
</ScrollView>