<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_edit_event"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <!--<Button-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="db_mgr"-->
        <!--android:id="@+id/event_edit_db_mgr"-->
        <!--android:clickable="true"/>-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            android:id="@+id/eventEditTextHeader"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:text="@string/eventEditTextLabel" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/eventEditText"
            android:layout_gravity="center_horizontal"
            android:allowUndo="true"
            android:clickable="true"
            android:enabled="true" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:enabled="true"
        android:gravity="center"
        android:id="@+id/eventEditSave"
        android:text="Save" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:enabled="true"
        android:gravity="center"
        android:id="@+id/event_edit_entrant"
        android:text="Add|Remove Teams" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:enabled="true"
        android:gravity="center"
        android:id="@+id/event_edit_user"
        android:text="Add|Remove Users" />
    
</LinearLayout>