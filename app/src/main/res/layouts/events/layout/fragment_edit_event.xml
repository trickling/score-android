<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_edit_event"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/eventNameHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/eventNameLabel"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/event_name_text_edit"
                android:gravity="center_vertical"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/eventLocationHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/eventLocLabel"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/event_loc_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/eventDateHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/eventDateLabel"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/event_date_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/eventEditHostHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/eventHostLabel"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/event_host_text_edit"
                android:gravity="center_vertical"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/eventEditStatusHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/eventStatusLabel"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/event_status_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/eventDivisionHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/eventDivLabel"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/event_division_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/eventEditIntSaHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/eventIntSaLabel"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/event_int_sa_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/eventEditExtSaHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/eventExtSaLabel"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/event_ext_sa_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/eventEditContSaHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/eventContSaLabel"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/event_cont_sa_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/eventEditVehSaHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/eventVehSaLabel"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/event_veh_sa_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/eventEditEliteSaHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/eventEliteSaLabel"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/event_elite_sa_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/eventEditIntHdHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/eventIntHdLabel"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/event_int_hd_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/eventEditExtHdHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/eventExtHdLabel"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/event_ext_hd_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/eventEditContHdHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/eventContHdLabel"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/event_cont_hd_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/eventEditVehHdHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/eventVehHdLabel"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/event_veh_hd_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/eventEditEliteHdHeader"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:text="@string/eventEliteHdLabel"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/event_elite_hd_text_edit"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:gravity="center_vertical"
                android:allowUndo="true"
                android:clickable="true"
                android:enabled="true" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:id="@+id/eventEditSave"
            android:text="Save" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:id="@+id/event_edit_entrant"
            android:text="Add|Remove Teams" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:enabled="true"
            android:gravity="center"
            android:id="@+id/event_edit_user"
            android:text="Add|Remove Users" />
    
    </LinearLayout>

</ScrollView>