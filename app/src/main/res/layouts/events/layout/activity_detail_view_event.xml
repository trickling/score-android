<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/event_view_detail_container"
    tools:ignore="MergeRootFrame" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <!--android:elevation="4dp"-->

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/fragment_detail_view_event"
        android:name="com.example.android.scoresheet.app.EventViewDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Events.EventViewDetailFragment"
        tools:layout="@layout/fragment_detail_view_event" />

</LinearLayout>