<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        tools:context=".Users.UserViewDetailFragment">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/userFirstNameHeader"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="@string/userFirstNameLabel" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:gravity="center_vertical|right"
                android:id="@+id/user_first_name_text_view"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/userLastNameHeader"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="@string/userLastNameLabel" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:gravity="center_vertical|right"
                android:id="@+id/user_last_name_text_view"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/userRoleHeader"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="@string/userRoleLabel" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:gravity="center_vertical|right"
                android:id="@+id/user_role_text_view"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/userStatusHeader"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="@string/userStatusLabel" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:gravity="center_vertical|right"
                android:id="@+id/user_status_text_view"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="100px"
                android:id="@+id/userEmailHeader"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="@string/userEmailLabel" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:gravity="center_vertical|right"
                android:id="@+id/user_email_text_view"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_gravity="center_horizontal" />

            </LinearLayout>

    </LinearLayout>

</ScrollView>