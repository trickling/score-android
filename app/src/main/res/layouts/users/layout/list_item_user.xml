<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:background="@drawable/touch_selector"
    android:id="@+id/list_item_user" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:id="@+id/list_item_first_name_textview"
            android:gravity="center_vertical"
            android:paddingRight="12dp"
            android:text="Marilyn"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100px"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:id="@+id/list_item_last_name_textview"
            android:gravity="center_vertical"
            android:paddingRight="16dp"
            android:text="Monroe"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="100px"
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:id="@+id/list_item_role_textview"
            android:text="Certifying Official"
            android:gravity="center_vertical|right" />
    </LinearLayout>

</LinearLayout>